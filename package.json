{
    "name": "gridwars",
    "version": "1.0.0",
    "description": "This is Valhalla",
    "license": "MIT",
    "scripts": {
        "start": "node index.js",
        "build": "webpack",
        "bot": "node libs/bot/index.js"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "node-fetch": "^2.6.0",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "shortid": "^2.2.14",
        "ws": "^7.2.1",
        "@babel/core": "^7.8.6",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.6",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.2.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "prettier": "^1.17.1",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.1"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "extends": [
            "airbnb",
            "plugin:prettier/recommended",
            "prettier/react"
        ],
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true,
            "jest": true,
            "node": true
        },
        "rules": {
            "jsx-a11y/href-no-hash": [
                "off"
            ],
            "react/jsx-filename-extension": [
                "warn",
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ],
            "max-len": [
                "warn",
                {
                    "code": 80,
                    "tabWidth": 4,
                    "comments": 80,
                    "ignoreComments": false,
                    "ignoreTrailingComments": true,
                    "ignoreUrls": true,
                    "ignoreStrings": true,
                    "ignoreTemplateLiterals": true,
                    "ignoreRegExpLiterals": true
                }
            ]
        }
    }
}
